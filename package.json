{
  "name": "planning-poker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && ng serve --proxy-config src/proxy.conf.json",
    "build": "cd server && npm run build && cd ../client && ng build",
    "start": "cd server && npm start"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
